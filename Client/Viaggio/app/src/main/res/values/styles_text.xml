<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.MinV.TextAppearance.Viaggio"
           parent="TextAppearance.AppCompat">
    </style>

    <style name="Base.TextAppearance.Viaggio"
           parent="Base.MinV.TextAppearance.Viaggio">
    </style>

    <style name="TextAppearance.Viaggio"
           parent="Base.TextAppearance.Viaggio">
    </style>

    <style name="TextAppearance.Viaggio.Calendar">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Viaggio.Navigation">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize" tools:ignore="SpUsage">20.3dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/almost_black</item>
    </style>
    <style name="TextAppearance.Viaggio.Navigation.Scroll">
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>

    <style name="TextAppearance.Viaggio.Non">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
        <item name="android:lineSpacingExtra" tools:ignore="SpUsage">3.3dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextAppearance.Viaggio.Travel">
        <item name="android:textColor">@color/ice</item>
        <item name="android:textSize" tools:ignore="SpUsage">30dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
    <style name="TextAppearance.Viaggio.Travel.Date">
        <item name="android:textColor">@color/ice</item>
        <item name="android:textSize" tools:ignore="SpUsage">10dp</item>
    </style>
    <style name="TextAppearance.Viaggio.Travel.Kind">
        <item name="android:textColor">@color/charcoal_two</item>
        <item name="android:textSize" tools:ignore="SpUsage">15.8dp</item>
        <item name="android:lineSpacingExtra" tools:ignore="SpUsage">3.3dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
    <style name="TextAppearance.Viaggio.Travel.Kind.Sub">
        <item name="android:textColor">@color/brown_grey</item>
        <item name="android:textSize" tools:ignore="SpUsage">9.5dp</item>
        <item name="android:lineSpacingExtra" tools:ignore="SpUsage">3.3dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextAppearance.Viaggio.Travel.Enroll">
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize" tools:ignore="SpUsage">15.7dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Viaggio.Travel.Country">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize" tools:ignore="SpUsage">16.2dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.Viaggio.Travel.Card">
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize" tools:ignore="SpUsage">13dp</item>
        <item name="android:lineSpacingExtra" tools:ignore="SpUsage">5.3dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>