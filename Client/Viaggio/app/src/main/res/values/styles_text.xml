<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.MinV.TextAppearance.Viaggio"
           parent="TextAppearance.AppCompat">
    </style>

    <style name="Base.TextAppearance.Viaggio"
           parent="Base.MinV.TextAppearance.Viaggio">
    </style>

    <style name="TextAppearance.Viaggio"
           parent="Base.TextAppearance.Viaggio">
    </style>

    <style name="TextAppearance.Viaggio.Calendar">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Viaggio.Kinds">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize" tools:ignore="SpUsage">19dp</item>
    </style>
    <style name="TextAppearance.Viaggio.Non">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize" tools:ignore="SpUsage">23dp</item>
        <item name="android:lineSpacingExtra" tools:ignore="SpUsage">3.3dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/noto_sanscjkkr_light</item>
    </style>
    <style name="TextAppearance.Viaggio.Travel">
        <item name="android:textColor">@color/ice</item>
        <item name="android:textSize" tools:ignore="SpUsage">41.7dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/noto_sanscjkkr_bold</item>
    </style>
    <style name="TextAppearance.Viaggio.Travel.Date">
        <item name="android:textColor">@color/ice</item>
        <item name="android:textSize" tools:ignore="SpUsage">10dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/noto_sanscjkkr_demilight</item>
    </style>
</resources>