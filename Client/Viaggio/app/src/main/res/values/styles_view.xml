<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ViewStyle.Viaggio" parent="">
    </style>

    <style name="ViewStyle.Viaggio.Kinds">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Viaggio.Travel.Kind</item>
        <item name="android:layout_marginStart">@dimen/travel_kind_margin</item>
        <item name="android:layout_marginTop">12.7dp</item>
    </style>
    <style name="ViewStyle.Viaggio.Kinds.Sub">
        <item name="android:textAppearance">@style/TextAppearance.Viaggio.Travel.Kind.Sub</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
    <style name="ViewStyle.Viaggio.Enroll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Viaggio.Travel.Enroll</item>
        <item name="android:layout_marginStart">@dimen/travel_kind_margin</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ViewStyle.Viaggio.Enroll.Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">@dimen/travel_kind_margin</item>
        <item name="android:inputType">text</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">end</item>
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="ViewStyle.Viaggio.Btn" parent="ViewStyle.Viaggio.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">71dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Viaggio.Btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">0dp</item>
    </style>
    <style name="ViewStyle.Viaggio.Back" parent="ViewStyle.Viaggio.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="icon" tools:ignore="PrivateResource">@drawable/ic_keyboard_arrow_left_black_24dp</item>
        <item name="iconTint">@color/almost_black</item>
        <item name="iconSize">40dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="ViewStyle.Viaggio.Option" parent="ViewStyle.Viaggio.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/common_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_margin</item>
        <item name="android:layout_marginBottom">@dimen/common_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.Viaggio.Option</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">1.2dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="ViewStyle.Viaggio.Sign">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/sign_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sign_normal_btn_bg</item>
        <item name="android:layout_marginStart">@dimen/common_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_margin</item>
        <item name="android:layout_marginTop">@dimen/common_top</item>
        <item name="android:textAppearance">@style/TextAppearance.Viaggio.Sign</item>
    </style>
    <style name="ViewStyle.Viaggio.Travel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/sign_height</item>
    </style>
    <style name="ViewStyle.Viaggio.Travel.Option">
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="chipStartPadding">@dimen/common_margin</item>
        <item name="android:textColor">@color/setting_enable_color</item>
        <item name="android:textAppearance">@style/TextAppearance.Viaggio.Travel.Option</item>
        <item name="chipBackgroundColor">@color/white_three</item>
        <item name="chipCornerRadius">0dp</item>
        <item name="chipMinHeight">50dp</item>
    </style>
    <style name="ViewStyle.Viaggio.Setting" parent="ViewStyle.Viaggio.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/common_top</item>
        <item name="android:layout_marginEnd">@dimen/common_top</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">@dimen/common_top</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/brown_grey_two</item>
        <item name="android:textAppearance">@style/TextAppearance.Viaggio.Setting</item>
    </style>
    <style name="ViewStyle.Viaggio.Setting.Profile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:drawablePadding">@dimen/common_top</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>
    <style name="ViewStyle.Viaggio.Lock" parent="ViewStyle.Viaggio.Button">
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textAppearance">@style/TextAppearance.Viaggio.Lock</item>
    </style>

    <style name="ViewStyle.Viaggio.Button" parent="@style/Widget.MaterialComponents.Button.TextButton" />
</resources>
