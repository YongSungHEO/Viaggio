<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.sign.SignInFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.sign.SignInFragmentViewModel"/>

        <variable name="viewModel" type="SignInFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
        <androidx.core.widget.NestedScrollView
                android:id="@+id/sign_in_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/white_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/signInContainer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
                <com.google.android.material.button.MaterialButton
                        style="@style/ViewStyle.Viaggio.Back"
                        app:iconTint="@android:color/white"
                        android:onClick="@{() ->viewHandler.back()}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/luncher_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="150dp"
                />
                <EditText
                        android:id="@id/signInEmailEdit"
                        style="@style/ViewStyle.Viaggio.Sign"
                        android:layout_marginTop="50dp"
                        android:textColorHint="@color/very_light_pink"
                        android:textColor="@android:color/white"
                        android:hint="@string/sign_in_email"
                        android:inputType="textWebEmailAddress"
                        android:background="@drawable/sign_edit_txt_bg"
                        android:text="@={viewModel.email}"
                        android:fontFamily="@font/comfortaa"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/logo"
                        tools:ignore="Autofill"/>
                <EditText
                        android:id="@id/signInPasswordEdit"
                        style="@style/ViewStyle.Viaggio.Sign"
                        android:textColorHint="@color/very_light_pink"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="15dp"
                        android:hint="@string/sign_in_password"
                        android:fontFamily="@font/comfortaa"
                        android:inputType="textWebPassword"
                        android:background="@drawable/sign_edit_txt_bg"
                        android:text="@={viewModel.password}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signInEmailEdit"
                        tools:ignore="Autofill"/>
                <TextView
                        android:id="@id/signInBtn"
                        style="@style/ViewStyle.Viaggio.Sign"
                        android:text="@string/sign_in_sign"
                        android:backgroundTint="@{viewModel.isFormValid ? @color/colorPrimary:@color/brown_grey}"
                        android:onClick="@{() -> viewHandler.signIn()}"
                        android:enabled="@{viewModel.isFormValid}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signInPasswordEdit"
                />
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@id/signInBtn"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>