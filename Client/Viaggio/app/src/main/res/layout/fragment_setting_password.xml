<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.setting.SettingPasswordFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.setting.SettingPasswordFragmentViewModel"/>

        <variable name="viewModel" type="SettingPasswordFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>

    <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
        <androidx.core.widget.NestedScrollView
                android:id="@+id/setting_password_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:background="@color/white_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <View
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="48.5dp"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <com.google.android.material.button.MaterialButton
                        style="@style/ViewStyle.Viaggio.Back"
                        android:onClick="@{()->viewHandler.close()}"
                        android:layout_marginTop="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/toolbar"
                        app:layout_constraintBottom_toBottomOf="@id/toolbar"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/tool_bar_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/toolbar"
                        app:layout_constraintBottom_toBottomOf="@id/toolbar"
                />

                <TextView
                        android:id="@id/settingMyProfile"
                        android:text="@string/setting_password"
                        style="@style/ViewStyle.Viaggio.Setting"
                        android:textColor="@color/almost_black"
                        android:layout_marginStart="@dimen/common_margin"
                        android:drawablePadding="6.5dp"
                        android:drawableStart="@drawable/ic_vpn_key"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/toolbar"
                />
                <View
                        android:id="@id/settingEtc"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/setting_bg"
                        android:layout_marginTop="@dimen/common_top"
                        android:layout_marginStart="@dimen/common_margin"
                        android:layout_marginEnd="@dimen/common_margin"
                        app:layout_constraintTop_toBottomOf="@id/settingMyProfile"
                        app:layout_constraintBottom_toBottomOf="@id/settingNewPasswordConfirm"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        android:id="@id/settingCurrentPassword"
                        android:text="@string/profile_password"
                        android:textColor="@color/almost_black"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        app:layout_constraintTop_toTopOf="@id/settingEtc"
                />

                <EditText
                        android:id="@+id/profile_old"
                        android:textColor="@color/almost_black"
                        android:inputType="textWebPassword"
                        android:textColorHint="@color/very_light_pink"
                        android:textSize="14dp"
                        android:maxLength="20"
                        android:text="@={viewModel.password}"
                        android:hint="@string/sign_in_password"
                        style="@style/ViewStyle.Viaggio.Setting.Profile"
                        app:layout_constraintTop_toTopOf="@id/settingCurrentPassword"
                        app:layout_constraintBottom_toBottomOf="@id/settingCurrentPassword"
                        app:layout_constraintEnd_toEndOf="@id/settingCurrentPassword"
                        app:layout_constraintStart_toStartOf="@id/settingCurrentPassword"
                        tools:ignore="Autofill,SpUsage"/>
                <TextView
                        android:id="@id/settingNewPassword"
                        android:text="@string/profile_new_password"
                        android:textColor="@color/almost_black"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        app:layout_constraintTop_toBottomOf="@id/settingCurrentPassword"
                />

                <EditText
                        android:id="@+id/profile_new"
                        style="@style/ViewStyle.Viaggio.Setting.Profile"
                        android:textColor="@color/almost_black"
                        android:textColorHint="@color/very_light_pink"
                        android:hint="@string/profile_new_password"
                        android:inputType="textWebPassword"
                        android:maxLength="20"
                        android:textSize="14dp"
                        android:text="@={viewModel.newPassword}"
                        app:layout_constraintTop_toTopOf="@id/settingNewPassword"
                        app:layout_constraintBottom_toBottomOf="@id/settingNewPassword"
                        app:layout_constraintEnd_toEndOf="@id/settingNewPassword"
                        app:layout_constraintStart_toStartOf="@id/settingNewPassword"
                        tools:text="123321321321312312312312312312312312312321312"
                        tools:ignore="Autofill,SpUsage"/>
                <TextView
                        android:id="@id/settingNewPasswordConfirm"
                        android:text="@string/profile_new_password_confirm"
                        android:textColor="@color/almost_black"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        app:layout_constraintTop_toBottomOf="@id/settingNewPassword"
                />

                <EditText
                        android:id="@+id/profile_confirm"
                        style="@style/ViewStyle.Viaggio.Setting.Profile"
                        android:textColor="@color/almost_black"
                        android:hint="@string/profile_new_password_confirm"
                        android:textColorHint="@color/very_light_pink"
                        android:gravity="end|center_vertical"
                        android:textSize="14dp"
                        android:maxLength="20"
                        android:inputType="textWebPassword"
                        android:text="@={viewModel.newPasswordConfirm}"
                        app:layout_constraintTop_toTopOf="@id/settingNewPasswordConfirm"
                        app:layout_constraintBottom_toBottomOf="@id/settingNewPasswordConfirm"
                        app:layout_constraintEnd_toEndOf="@id/settingNewPasswordConfirm"
                        app:layout_constraintStart_toStartOf="@id/settingNewPasswordConfirm"
                        tools:ignore="Autofill,SpUsage"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@id/settingNewPasswordConfirm"
                        app:layout_constraintBottom_toTopOf="@id/travelingStart"
                />

                <com.google.android.material.button.MaterialButton
                        android:id="@id/travelingStart"
                        style="@style/ViewStyle.Viaggio.Btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/profile_save"
                        android:onClick="@{()->viewHandler.save()}"
                        android:visibility="@{viewModel.isFormValid ? View.VISIBLE:View.GONE}"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>