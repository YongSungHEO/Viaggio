<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
>
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.sign.SignUpFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.sign.SignUpFragmentViewModel"/>

        <variable name="viewModel" type="SignUpFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
    >
        <androidx.core.widget.NestedScrollView
                android:id="@+id/sign_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/white_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/signUpContainer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
                <com.google.android.material.button.MaterialButton
                        style="@style/ViewStyle.Viaggio.Back"
                        app:iconTint="@android:color/white"
                        android:onClick="@{() ->viewHandler.back()}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                />

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@id/signUpNameEdit"
                        style="@style/ViewStyle.Viaggio.Sign"
                        android:hint="@string/sign_up_name"
                        android:textColorHint="@color/very_light_pink"
                        android:layout_marginTop="150dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="@={viewModel.name}"
                            android:fontFamily="@font/comfortaa"
                            android:inputType="text"
                    />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@id/signUpEmailEdit"
                        style="@style/ViewStyle.Viaggio.Sign"
                        android:hint="@string/sign_in_email"
                        android:textColorHint="@color/very_light_pink"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signUpNameEdit"
                        app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="@={viewModel.email}"
                            android:fontFamily="@font/comfortaa"
                            android:inputType="textWebEmailAddress"
                    />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@id/signUpPasswordEdit"
                        style="@style/ViewStyle.Viaggio.Sign"
                        android:hint="@string/sign_in_password"
                        android:textColorHint="@color/very_light_pink"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signUpEmailEdit"
                        app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/pw_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:maxLength="20"
                            android:text="@={viewModel.password}"
                            android:fontFamily="@font/comfortaa"
                            android:inputType="textWebPassword"
                    />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@id/signUpConfirmPasswordEdit"
                        style="@style/ViewStyle.Viaggio.Sign"
                        android:hint="@string/sign_up_confirm_password"
                        android:textColorHint="@color/very_light_pink"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signUpPasswordEdit"
                        app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/confirm_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:maxLength="20"
                            android:text="@={viewModel.confirmPassword}"
                            android:fontFamily="@font/comfortaa"
                            android:inputType="textWebPassword"
                    />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                        android:id="@id/signUpBtn"
                        style="@style/ViewStyle.Viaggio.SignBtn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signUpConfirmPasswordEdit"
                        android:text="@string/sign_up"
                        android:onClick="@{() -> viewHandler.signUp()}"
                        android:enabled="@{viewModel.isFormValid}"
                        android:backgroundTint="@{viewModel.isFormValid ? @color/colorPrimary:@color/brown_grey}"
                        tools:backgroundTint="@color/colorPrimary"
                />
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@id/signUpBtn"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>