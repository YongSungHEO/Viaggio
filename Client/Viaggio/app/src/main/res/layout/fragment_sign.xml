<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.sign.SignFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.sign.SignFragmentViewModel"/>

        <variable name="viewModel" type="SignFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sign_container"
                android:background="@color/white_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/signContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />
            <androidx.appcompat.widget.AppCompatImageView
                    style="@style/ViewStyle.Viaggio.Back"
                    android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                    android:onClick="@{() ->viewHandler.back()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/logo"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="150dp"
            />

            <TextView
                    android:id="@id/signNormalBtn"
                    android:background="@drawable/sign_normal_btn_bg"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="50dp"
                    style="@style/ViewStyle.Viaggio.Sign"
                    android:text="@string/normal_sign"
                    android:onClick="@{() -> viewHandler.normalSign()}"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="@dimen/common_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/logo"
                    app:layout_constraintBottom_toTopOf="@id/signCreateAccountBtn"
            />
            <TextView
                    android:id="@id/signCreateAccountBtn"
                    android:background="@drawable/sign_normal_btn_bg"
                    android:backgroundTint="@android:color/white"
                    android:layout_height="50dp"
                    style="@style/ViewStyle.Viaggio.Sign"
                    android:text="@string/sign_sign_up"
                    android:textColor="@color/colorPrimary"
                    android:onClick="@{() -> viewHandler.createAccount()}"
                    android:layout_marginBottom="@dimen/common_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/signNormalBtn"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>