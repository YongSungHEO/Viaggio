<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.traveling.detail.TravelingDetailFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.traveling.detail.TravelingDetailFragmentViewModel"/>

        <variable name="viewModel" type="TravelingDetailFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
    >
        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@id/travelingDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_three">
            <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollContainer"
                    android:background="@color/white_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:fillViewport="true">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@id/travelingDetailDayTravelCardCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/common_margin"
                            android:textSize="18dp"
                            android:textColor="@color/almost_black"
                            android:letterSpacing="-0.02"
                            app:layout_constraintTop_toTopOf="@id/travelingDetailDayTravelCardDay"
                            app:layout_constraintBottom_toBottomOf="@id/travelingDetailDayTravelCardTheme"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="@{viewModel.country}"
                            android:fontFamily="sans-serif-black"
                            tools:text="스페인_마드리드"
                            tools:ignore="SpUsage"/>
                    <TextView
                            android:id="@id/travelingDetailDayTravelCardDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/common_margin"
                            android:textSize="15.7dp"
                            android:textColor="@color/brown_grey_two"
                            android:letterSpacing="-0.02"
                            android:fontFamily="sans-serif-black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@{@string/travel_card_count(viewModel.dayCount)}"
                            tools:text="1일차"
                            tools:ignore="SpUsage"/>
                    <TextView
                            android:id="@id/travelingDetailDayTravelCardDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4.5dp"
                            android:textSize="12dp"
                            android:textColor="@color/brown_grey_two"
                            android:letterSpacing="-0.02"
                            android:fontFamily="sans-serif-light"
                            android:text="@{viewModel.date}"
                            app:layout_constraintEnd_toEndOf="@id/travelingDetailDayTravelCardDay"
                            app:layout_constraintTop_toBottomOf="@id/travelingDetailDayTravelCardDay"
                            tools:text="2017년 10월 20일"
                            tools:ignore="SpUsage"/>
                    <TextView
                            android:id="@id/travelingDetailDayTravelCardTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4.5dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimary"
                            android:letterSpacing="-0.02"
                            android:fontFamily="sans-serif-light"
                            android:text="@{viewModel.theme}"
                            app:layout_constraintEnd_toEndOf="@id/travelingDetailDayTravelCardDate"
                            app:layout_constraintTop_toBottomOf="@id/travelingDetailDayTravelCardDate"
                            tools:text="#신혼, #식도락, #와이너리"
                            tools:ignore="SpUsage"/>
                    <TextView
                            android:id="@id/travelingDetailDayTravelCardList"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:padding="@dimen/common_margin"
                            android:text="@{viewModel.content}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/travelingDetailDayTravelCardTheme"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="saddsadsad4s5a6d4s5a4d56asd4sad4asdsadasdasdsadsasdassaasassaasasddsadsaaddsadsadadaddsadsadsadsadsadasdsadasdass"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
            <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBar"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:fitsSystemWindows="true"
            >
                <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/collapsingToolbarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:contentScrim="?attr/colorPrimary"
                        app:expandedTitleMarginEnd="64dp"
                        app:expandedTitleMarginStart="48dp"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">
                    <androidx.viewpager2.widget.ViewPager2
                            android:id="@id/travelingDetailDayImg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:background="@drawable/background"
                            android:fitsSystemWindows="true"
                            app:layout_collapseMode="parallax"/>
                    <com.kotlin.viaggio.widget.PageIndicatorView
                            android:id="@id/travelOfDayImageIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="bottom|center_horizontal"
                    />

                    <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_marginTop="24dp"
                            app:layout_collapseMode="pin">
                        <androidx.appcompat.widget.AppCompatImageView
                                style="@style/ViewStyle.Viaggio.Back"
                                android:layout_marginStart="0dp"
                                android:onClick="@{()->viewHandler.back()}"
                        />
                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</layout>