<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.kotlin.viaggio.data.object.Traveled"/>
        <import type="android.view.View"/>

        <variable name="data" type="Traveled"/>
    </data>

    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/travelBackground"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    tools:background="@drawable/background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                    android:id="@id/travelBack"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.5"
                    android:background="@drawable/travel_gradient_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

            />
            <TextView
                    android:id="@id/travelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:alpha="0.75"
                    android:text="@{data.title}"
                    android:layout_marginStart="16dp"
                    android:textAppearance="@style/TextAppearance.Viaggio.Travel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tgl"
                    app:layout_constraintBottom_toTopOf="@id/space"
                    tools:text="즐거운 나의 여행"
            />
            <Space
                    android:id="@+id/space"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/travelTitle"
                    app:layout_constraintBottom_toTopOf="@id/travelDate"
                    app:layout_constraintVertical_weight="5"
            />
            <TextView
                    android:id="@id/travelDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@{data.period}"
                    android:textAppearance="@style/TextAppearance.Viaggio.Travel.Date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/space"
                    app:layout_constraintBottom_toTopOf="@id/space1"
                    tools:text="2019.02.13 ~ "
            />
            <Space
                    android:id="@+id/space1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/travelDate"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_weight="294.3"
            />
            <androidx.constraintlayout.widget.Group
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="@{data == null ? View.GONE:View.VISIBLE}"
                    app:constraint_referenced_ids="travelTitle, travelDate,travelBack,travelBackground"
                    tools:ignore="NotSibling"/>
            <View
                    android:id="@id/travelNonBack"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/travel_gradient_non_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />
            <Space
                    android:id="@+id/tgl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/travelNonNotice"
                    app:layout_constraintVertical_weight="37.7"
            />
            <TextView
                    android:id="@id/travelNonNotice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/non_travel_notice"
                    android:textAppearance="@style/TextAppearance.Viaggio.Non"
                    android:layout_marginStart="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tgl"
                    app:layout_constraintBottom_toTopOf="@id/tgl1"
            />
            <Space
                    android:id="@+id/tgl1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/travelNonNotice"
                    app:layout_constraintBottom_toTopOf="@id/travelAdd"
                    app:layout_constraintVertical_weight="191.3"
            />
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/travelAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/add_travel"
                    app:layout_constraintTop_toBottomOf="@id/tgl1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tgl2"/>
            <Space
                    android:id="@+id/tgl2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/travelAdd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_weight="80"
            />
            <androidx.constraintlayout.widget.Group
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="@{data == null ? View.VISIBLE:View.GONE}"
                    app:constraint_referenced_ids="travelNonNotice, travelAdd, travelNonBack"
                    tools:ignore="NotSibling"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>