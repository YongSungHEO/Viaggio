<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp"
                android:id="@+id/tgl"/>
        <ImageView
                android:id="@id/travelCardBg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/tgl"
                app:layout_constraintBottom_toBottomOf="@id/travelCardEnrollCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/travel_bg"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"/>

        <com.google.android.flexbox.FlexboxLayout
                android:id="@id/travelCardEnrollCard"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                app:flexWrap="wrap"
                app:alignItems="stretch"
                app:alignContent="stretch"
                app:layout_constraintStart_toStartOf="@id/travelCardBg"
                app:layout_constraintEnd_toEndOf="@id/travelCardBg"
                app:layout_constraintTop_toTopOf="@id/travelCardBg">
            <ImageView
                    android:id="@id/travelCardEnrollImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    app:layout_flexGrow="1"
                    tools:src="@drawable/background"
                    android:scaleType="centerCrop"
            />
            <ImageView
                    android:id="@id/travelCardEnrollImg2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    app:layout_flexGrow="1"
                    android:scaleType="centerCrop"
            />
            <ImageView
                    android:id="@id/travelCardEnrollImg3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    app:layout_flexGrow="1"
                    android:scaleType="centerCrop"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@id/travelCardEnrollImg4Container"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    app:layout_flexGrow="1">
                <ImageView
                        android:id="@id/travelCardEnrollImg4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.6"
                        android:background="@android:color/black"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>