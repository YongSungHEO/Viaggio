<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.traveling.enroll.TravelingOfDayEnrollFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.traveling.enroll.TravelingOfDayEnrollFragmentViewModel"/>

        <variable name="viewModel" type="TravelingOfDayEnrollFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@android:color/transparent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/enroll_container"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <View
                    android:id="@+id/tgl"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:textColor="@android:color/black"
                    android:text="@string/back"
                    android:gravity="center"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tgl"
                    app:layout_constraintStart_toStartOf="parent"
                    android:onClick="@{()->viewHandler.back()}"
            />
            <TextView
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="@string/done"
                    android:gravity="center"
                    android:padding="10dp"
                    app:layout_constraintTop_toTopOf="@id/back"
                    app:layout_constraintBottom_toBottomOf="@id/back"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="@{()->viewHandler.save()}"
            />

            <TextView
                    android:id="@id/travelingOfDayEnrollDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/back"
                    android:text="@{viewModel.date}"
                    tools:text="SATURDAY / MARCH 16 / 2019"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
            />
            <View
                    android:id="@+id/titleTgl"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="@id/travelingOfDayEnrollDate"
                    app:layout_constraintEnd_toEndOf="@id/travelingOfDayEnrollDate"
                    app:layout_constraintTop_toBottomOf="@id/travelingOfDayEnrollDate"
                    android:layout_marginTop="20dp"
            />

            <EditText
                    android:id="@id/travelingOfDayEnrollTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/enroll_title"
                    android:inputType="text"
                    android:text="@={viewModel.title}"
                    app:layout_constraintStart_toStartOf="@id/travelingOfDayEnrollDate"
                    app:layout_constraintEnd_toEndOf="@id/travelingOfDayEnrollDate"
                    app:layout_constraintTop_toBottomOf="@id/titleTgl"
                    android:layout_marginTop="15dp"
                    tools:ignore="Autofill"/>
            <ImageView
                    android:id="@id/travelOfDayImage"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    tools:src="@drawable/background"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="@id/travelingOfDayEnrollDate"
                    app:layout_constraintEnd_toEndOf="@id/travelingOfDayEnrollDate"
                    app:layout_constraintTop_toBottomOf="@id/travelingOfDayEnrollTitle"
                    android:layout_marginTop="10dp"
            />
            <EditText
                    android:id="@id/travelingOfDayEnrollContents"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:inputType="textMultiLine"
                    android:gravity="start"
                    android:textSize="15sp"
                    android:scrollbars="vertical"
                    android:text="@={viewModel.contents}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/time"
                    app:layout_constraintTop_toBottomOf="@id/travelOfDayImage"
                    android:background="@null"
                    tools:text="   saddasdasdsadasd \n saddasdasdsadasd saddasdasdsadasd\nsaddasdasdsadasd\nsaddasdasdsadasd "
                    tools:ignore="Autofill"/>
            <ImageView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:onClick="@{()->viewHandler.enrollOfTime()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />
            <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/empty_gallery"
                    android:onClick="@{()->viewHandler.image()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>