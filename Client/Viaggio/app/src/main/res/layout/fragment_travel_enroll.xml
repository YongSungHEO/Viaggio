<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.travel.TravelEnrollFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.travel.TravelEnrollFragmentViewModel"/>

        <variable name="viewModel" type="TravelEnrollFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/travelingContainer"
            android:background="@android:color/white">
        <View
                android:id="@+id/tgl"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:id="@id/travelingStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tgl"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:onClick="@{() -> viewHandler.travelStart()}"
                android:text="확인"
                android:textSize="20sp"
                tools:ignore="HardcodedText"/>
        <TextView
                android:id="@id/travelingCountry"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/sign_edit_txt_bg"
                android:layout_margin="30dp"
                android:gravity="center"
                android:text="@{viewModel.travelingStartOfCountry}"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toBottomOf="@id/travelingStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/travelingDay"
        />
        <ImageView
                android:id="@id/travelingCamera"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:onClick="@{()->viewHandler.cameraOpen()}"
                android:src="@drawable/icon_upload_empty"
                app:layout_constraintTop_toTopOf="@id/travelingCountry"
                app:layout_constraintBottom_toBottomOf="@id/travelingCountry"
                app:layout_constraintEnd_toEndOf="@id/travelingCountry"
        />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/travelingDay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/sign_edit_txt_bg"
                android:layout_margin="30dp"
                app:layout_constraintTop_toBottomOf="@id/travelingCountry"
                app:layout_constraintBottom_toTopOf="@id/travelingTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="10dp"
                    android:text="여행 시작 날"
                    android:textColor="@android:color/black"
                    tools:ignore="HardcodedText"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.travelingStartOfDay}"
                    android:onClick="@{() -> viewHandler.changeDate()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="30sp"
                    tools:text="2019/03/11"
                    android:textColor="@android:color/black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/travelingTheme"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/sign_edit_txt_bg"
                android:layout_margin="30dp"
                app:layout_constraintTop_toBottomOf="@id/travelingDay"
                app:layout_constraintBottom_toTopOf="@id/homeController"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="@{viewModel.themeExist ? View.VISIBLE:View.GONE}"
                    android:layout_margin="10dp"
                    android:text="나의 테마는"
                    android:textColor="@android:color/black"
                    tools:ignore="HardcodedText"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/travelingThemes"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="@{viewModel.themeExist ? View.VISIBLE:View.GONE}"
                    app:layout_constraintTop_toBottomOf="@+id/test"
                    app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/popup_gallery_empty"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="@{() -> viewHandler.addTheme()}"
                    android:visibility="@{viewModel.themeExist ? View.GONE:View.VISIBLE}"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:text="테마 추가하기"
                    tools:ignore="HardcodedText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
                android:id="@id/homeController"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:id="@id/homeTravelingListNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_menu"
                android:text="@string/home_traveling"
                android:textColor="@android:color/black"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/homeController"
                app:layout_constraintTop_toTopOf="@id/homeController"/>
        <TextView
                android:id="@id/homeTravelListNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_upload_empty"
                android:text="@string/home_travel"
                android:textColor="@android:color/black"
                android:onClick="@{()->viewHandler.traveled()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/homeController"
                app:layout_constraintTop_toTopOf="@id/homeController"
        />
        <TextView
                android:id="@id/settingNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_upload_empty"
                android:text="@string/home_setting"
                android:textColor="@android:color/black"
                android:layout_marginEnd="30dp"
                android:onClick="@{()->viewHandler.setting()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/homeController"
                app:layout_constraintTop_toTopOf="@id/homeController"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>