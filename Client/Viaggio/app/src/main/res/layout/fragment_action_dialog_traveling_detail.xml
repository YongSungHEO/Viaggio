<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.traveling.TravelingDetailActionDialogFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.traveling.TravelingDetailActionDialogFragmentViewModel"/>

        <variable name="viewModel"
                  type="com.kotlin.viaggio.view.traveling.TravelingDetailActionDialogFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{()->viewHandler.close()}"
                android:background="@color/dialogBg">

            <EditText
                    android:id="@id/detailDialogChangeCountry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/travel_card_contents_bg"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="30dp"
                    android:hint="@string/empty_hint"
                    android:inputType="textMultiLine"
                    android:textAppearance="@style/TextAppearance.Viaggio.Travel.Card"
                    android:textColor="@color/almost_black"
                    android:text="@={viewModel.contents}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="Autofill"/>
            <TextView
                    android:id="@id/detailDialogClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_normal_btn_bg"
                    android:paddingStart="@dimen/common_margin"
                    android:paddingEnd="@dimen/common_margin"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/almost_black"
                    android:text="@string/travel_card_close"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/detailDialogChangeCountry"
                    app:layout_constraintTop_toBottomOf="@id/detailDialogChangeCountry"
                    android:onClick="@{()->viewHandler.close()}"
            />

            <TextView
                    android:id="@id/detailDialogTravelFinish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_normal_btn_bg"
                    android:paddingStart="@dimen/common_margin"
                    android:paddingEnd="@dimen/common_margin"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/profile_save"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="6.5dp"
                    app:layout_constraintEnd_toStartOf="@id/detailDialogClose"
                    app:layout_constraintTop_toBottomOf="@id/detailDialogChangeCountry"
                    android:onClick="@{()->viewHandler.save()}"
            />
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toBottomOf="@id/detailDialogTravelFinish"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>