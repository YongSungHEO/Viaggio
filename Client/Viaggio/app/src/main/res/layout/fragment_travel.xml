<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.travel.TravelFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.travel.TravelFragmentViewModel"/>

        <variable name="viewModel" type="com.kotlin.viaggio.view.travel.TravelFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_three">
        <View
                android:layout_width="match_parent"
                android:layout_height="48.5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/white_three"
                android:id="@id/travelAppBar"
        />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/back"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:padding="@dimen/common_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/icon_menu"
                app:iconGravity="textStart"
                app:iconTint="@color/almost_black"
                app:rippleColor="@color/rippleColor"
                android:onClick="@{()->viewHandler.setting()}"
                app:layout_constraintTop_toTopOf="@id/travelAppBar"
                app:layout_constraintBottom_toBottomOf="@id/travelAppBar"
                app:layout_constraintStart_toStartOf="@id/travelAppBar"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/tool_bar_title"
                app:layout_constraintTop_toTopOf="@id/travelAppBar"
                app:layout_constraintBottom_toBottomOf="@id/travelAppBar"
                app:layout_constraintStart_toStartOf="@id/travelAppBar"
                app:layout_constraintEnd_toEndOf="@id/travelAppBar"
        />
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:lineSpacingExtra="3.8dp"
                android:textColor="@color/almost_black"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/travelAppBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/title_sub"
                android:text="@{viewModel.travelingKind}"
                android:visibility="@{viewModel.travelingKind == `` ? View.GONE:View.VISIBLE}"
                tools:text="@string/travel_overseas"
                tools:ignore="SpUsage"/>
        <TextView
                android:id="@+id/title_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:lineSpacingExtra="2.8dp"
                android:textColor="@color/pinkish_grey"
                android:fontFamily="sans-serif"
                android:layout_marginTop="6.5dp"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintEnd_toEndOf="@id/title"
                android:text="@{viewModel.traveling}"
                tools:text="@string/traveling_notice"
                tools:ignore="SpUsage"/>
        <Space
                android:id="@+id/verticalSpace1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="95"
                app:layout_constraintTop_toBottomOf="@id/title_sub"
                app:layout_constraintBottom_toTopOf="@id/travelSpinner"
                />
        <Spinner
                android:id="@id/travelSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.45"
                android:background="@drawable/spinner_bg"
                android:backgroundTint="@color/white_three"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/verticalSpace1"
                app:layout_constraintBottom_toTopOf="@id/verticalSpace2"
                />
        <Space
                android:id="@+id/verticalSpace2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="25"
                app:layout_constraintTop_toBottomOf="@id/travelSpinner"
                app:layout_constraintBottom_toTopOf="@id/travelPager"
                />
        <androidx.viewpager.widget.ViewPager
                android:id="@id/travelPager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.5885"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingEnd="@dimen/card_padding"
                android:paddingStart="@dimen/card_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/verticalSpace2"
                app:layout_constraintBottom_toTopOf="@id/verticalSpace3"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <Space
                android:id="@+id/verticalSpace3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="25"
                app:layout_constraintTop_toBottomOf="@id/travelPager"
                app:layout_constraintBottom_toTopOf="@id/adView"
                />
        <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="@string/viaggio_abmob_banner_api_key"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>