<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.setting.SettingMyProfileFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.setting.SettingMyProfileFragmentViewModel"/>

        <variable name="viewModel" type="SettingMyProfileFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>

    <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
        <androidx.core.widget.NestedScrollView
                android:id="@+id/setting_profile_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:background="@color/white_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <View
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="48.5dp"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        style="@style/ViewStyle.Viaggio.Back"
                        android:onClick="@{()->viewHandler.close()}"
                        android:layout_marginTop="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/toolbar"
                        app:layout_constraintBottom_toBottomOf="@id/toolbar"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/tool_bar_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/toolbar"
                        app:layout_constraintBottom_toBottomOf="@id/toolbar"
                />

                <TextView
                        android:id="@id/settingMyProfile"
                        android:text="@string/setting_my_profile"
                        style="@style/ViewStyle.Viaggio.Setting"
                        android:textColor="@color/almost_black"
                        android:layout_marginStart="@dimen/common_margin"
                        android:drawablePadding="6.5dp"
                        android:drawableStart="@drawable/icon_my_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/toolbar"
                />
                <View
                        android:id="@id/settingEtc"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/setting_bg"
                        android:layout_marginTop="@dimen/common_top"
                        android:layout_marginStart="@dimen/common_margin"
                        android:layout_marginEnd="@dimen/common_margin"
                        app:layout_constraintTop_toBottomOf="@id/settingMyProfile"
                        app:layout_constraintBottom_toBottomOf="@id/settingLogout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        android:id="@id/settingAutoUploadCheck"
                        android:text="@string/profile_image"
                        android:textColor="@color/almost_black"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        app:layout_constraintTop_toTopOf="@id/settingEtc"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_profile_mini"
                        app:layout_constraintEnd_toEndOf="@id/settingAutoUploadCheck"
                        app:layout_constraintTop_toTopOf="@id/settingAutoUploadCheck"
                        app:layout_constraintBottom_toBottomOf="@id/settingAutoUploadCheck"
                />
                <TextView
                        android:id="@id/settingSync"
                        android:text="@string/profile_email"
                        android:textColor="@color/almost_black"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        app:layout_constraintTop_toBottomOf="@id/settingAutoUploadCheck"
                />
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/almost_black"
                        android:textSize="14dp"
                        android:text="@{viewModel.email}"
                        android:fontFamily="@font/comfortaa"
                        app:layout_constraintTop_toTopOf="@id/settingSync"
                        app:layout_constraintBottom_toBottomOf="@id/settingSync"
                        app:layout_constraintEnd_toEndOf="@id/settingSync"
                        app:layout_constraintStart_toStartOf="@id/settingSync"
                        tools:text="minkyu9403@gmail.com"
                        tools:ignore="SpUsage"/>
                <TextView
                        android:id="@id/settingLogout"
                        android:text="@string/profile_name"
                        android:textColor="@color/almost_black"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        app:layout_constraintTop_toBottomOf="@id/settingSync"
                />

                <EditText
                        android:hint="@string/sign_up_name"
                        android:textColor="@color/almost_black"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:text="@={viewModel.name}"
                        style="@style/ViewStyle.Viaggio.Setting.Profile"
                        app:layout_constraintTop_toTopOf="@id/settingLogout"
                        app:layout_constraintBottom_toBottomOf="@id/settingLogout"
                        app:layout_constraintEnd_toEndOf="@id/settingLogout"
                        app:layout_constraintStart_toStartOf="@id/settingLogout"
                        tools:ignore="Autofill,SpUsage"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@id/settingLogout"
                        app:layout_constraintBottom_toTopOf="@id/travelingStart"
                />

                <TextView
                        android:id="@id/travelingStart"
                        style="@style/ViewStyle.Viaggio.Btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/profile_save"
                        android:onClick="@{()->viewHandler.save()}"
                        android:background="@color/colorPrimary"
                        android:visibility="@{viewModel.isFormValid ? View.VISIBLE:View.GONE}"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>