<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.traveling.traveling_card.TravelingCardEnrollFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.traveling.traveling_card.TravelingCardEnrollFragmentViewModel"/>

        <variable name="viewModel" type="TravelingCardEnrollFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/travelCardEnrollBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/white"
                app:behavior_hideable="true"
                app:behavior_peekHeight="200dp"
                app:layout_behavior="@string/bottom_sheet_behavior"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/travelCardEnrollImageAllList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.additional ? View.GONE:View.VISIBLE}">
            <View
                    android:id="@+id/tgl"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:textColor="@android:color/black"
                    android:text="@string/back"
                    android:gravity="center"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tgl"
                    app:layout_constraintStart_toStartOf="parent"
                    android:onClick="@{()->viewHandler.back()}"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tgl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="@{()->viewHandler.back()}"
                    android:text="Choose Image"
                    tools:ignore="HardcodedText"/>
            <TextView
                    android:id="@id/travelCardEnrollConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tgl"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="@{() -> viewHandler.next()}"
                    android:padding="10dp"
                    android:text="다음"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" tools:ignore="HardcodedText"/>
            <androidx.cardview.widget.CardView
                    android:id="@id/travelCardEnrollCard"
                    android:layout_width="0dp"
                    android:layout_height="350dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollConfirm"
                    app:cardCornerRadius="20dp">
                <ImageView
                        android:id="@id/travelCardEnrollLastImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:scrollbars="vertical"
                />
            </androidx.cardview.widget.CardView>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:hint="@string/traveling_card_contents_hint"
                    android:inputType="textMultiLine"
                    android:text="@={viewModel.contents}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollCard"
                    app:layout_constraintBottom_toBottomOf="parent"
            />

            <ImageView
                    android:id="@id/travelCardEnrollImageBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/traveling_card_enroll_img_bg"
                    android:onClick="@{()->viewHandler.openImgList()}"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.additional ? View.VISIBLE:View.GONE}">
            <View
                    android:id="@+id/tgl2"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:textColor="@android:color/black"
                    android:text="@string/back"
                    android:gravity="center"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tgl2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:onClick="@{()->viewHandler.back()}"
            />

            <TextView
                    android:id="@id/travelCardEnrollAdditionalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tgl2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="@{()->viewHandler.back()}"
                    android:text="Choose Additional"
                    tools:ignore="HardcodedText"/>
            <TextView
                    android:id="@id/travelCardEnrollAdditionalConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tgl2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="@{() -> viewHandler.save()}"
                    android:padding="10dp"
                    android:text="확인"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" tools:ignore="HardcodedText"/>
            <ImageView
                    android:id="@id/travelCardEnrollAdditionalImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollAdditionalConfirm"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:id="@id/travelCardEnrollAdditionalContents"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="10dp"
                    android:hint="@string/traveling_card_contents_hint"
                    android:text="@{viewModel.contents}"
                    android:textColor="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/travelCardEnrollAdditionalImage"
                    app:layout_constraintBottom_toBottomOf="@id/travelCardEnrollAdditionalImage"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollAdditionalConfirm"
            />

            <View
                    android:id="@id/travelCardEnrollAdditionalPlaceTgl"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/pinkish_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollAdditionalContents"
            />

            <EditText
                    android:id="@id/travelCardEnrollAdditionalPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="장소"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="7dp"
                    android:padding="15dp"
                    android:text="@={viewModel.place}"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollAdditionalPlaceTgl"
                    app:layout_constraintStart_toStartOf="parent"
            />
            <View
                    android:id="@id/travelCardEnrollAdditionalTimeTgl"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="@color/pinkish_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollAdditionalPlace"
            />
            <TextView
                    android:id="@id/travelCardEnrollAdditionalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:padding="15dp"
                    android:text='@{viewModel.time}'
                    android:hint="등록 시간"
                    android:onClick="@{()->viewHandler.enrollOfTime()}"
                    android:textColor="@android:color/black"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollAdditionalTimeTgl"/>
            <View
                    android:id="@id/travelCardEnrollAdditionalTransportationTgl"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/pinkish_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollAdditionalTime"
            />
            <TextView
                    android:id="@id/travelCardEnrollAdditionalTransportation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:padding="15dp"
                    android:hint="이동수단"
                    android:text='@{viewModel.transportation}'
                    android:onClick="@{()->viewHandler.transportation()}"
                    android:textColor="@android:color/black"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollAdditionalTransportationTgl"/>
            <View
                    android:id="@id/travelCardEnrollAdditionalTransportationBgl"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/pinkish_grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/travelCardEnrollAdditionalTransportation"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>