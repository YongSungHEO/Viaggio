<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.kotlin.viaggio.data.object.TravelCard"/>
        <import type="com.kotlin.viaggio.view.traveling.TravelingFragment.TravelCardViewHolder.TravelCardViewHandler"/>
        <import type="android.view.View"/>


        <variable name="data" type="TravelCard"/>
        <variable name="viewHandler" type="TravelCardViewHandler"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <androidx.viewpager2.widget.ViewPager2
                android:id="@id/travelingItemThemeImg"
                android:layout_width="0dp"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <com.kotlin.viaggio.widget.PageIndicatorView
                android:id="@id/travelingItemIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_margin"
                app:layout_constraintStart_toStartOf="@id/travelingItemThemeImg"
                app:layout_constraintEnd_toEndOf="@id/travelingItemThemeImg"
                app:layout_constraintBottom_toBottomOf="@id/travelingItemThemeImg"
        />

        <TextView
                android:id="@id/travelingItemInfo"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_marginTop="@dimen/common_top"
                android:layout_marginStart="@dimen/travel_card_start"
                android:layout_marginEnd="@dimen/travel_card_end"
                android:textAppearance="@style/TextAppearance.Viaggio.Travel.Card"
                android:layout_marginBottom="30dp"
                android:text="@{data.content}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/travelingItemThemeImg"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="설레는 출발입니다 드디어 스페인을 가다니 너무나 기가 되는데요 껄껄무나 기가 되는데요 껄껄무나 기가 되는데요 껄껄무나 기가 되는데요 껄껄껄껄껄"
        />
        <View
                android:id="@+id/bar"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/brown_grey"
                android:alpha="0.6"
                android:layout_marginStart="@dimen/top_height"
                app:layout_constraintStart_toEndOf="@id/travelingItemInfo"
                app:layout_constraintTop_toBottomOf="@id/travelingItemThemeImg"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:id="@id/TravelingItemDayCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/travelingItemThemeImg"
                app:layout_constraintStart_toEndOf="@id/travelingItemInfo"
                android:textAppearance="@style/TextAppearance.Viaggio.Travel.Card.Day"
                android:visibility="@{data.travelOfDay == 0 ? View.GONE:View.VISIBLE}"
                android:text="@{String.format(@string/travel_count, data.travelOfDay)}"
                android:rotation="90"
                android:layout_marginTop="30dp"
                tools:text="DAY 1"
                tools:ignore="SpUsage"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/travelingItemThemeImg"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"

        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
