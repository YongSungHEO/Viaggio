<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.travel.kinds.TravelKindsBottomSheetDialogFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.travel.kinds.TravelKindsBottomSheetDialogFragmentViewModel"/>

        <variable name="viewModel" type="TravelKindsBottomSheetDialogFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/white"
    >
        <TextView
                android:id="@id/travelKinds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:text="Click Travel Kinds!"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <androidx.cardview.widget.CardView
                android:id="@id/travelOverseas"
                style="@style/ViewStyle.Viaggio.Kinds"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/travelKinds"
                android:onClick='@{()->viewHandler.selectedKinds("overseas")}'
        />
        <ImageView
                android:id="@id/travelOverseasIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/icon_menu"
                app:layout_constraintStart_toStartOf="@id/travelOverseas"
                app:layout_constraintTop_toTopOf="@id/travelOverseas"
                app:layout_constraintBottom_toBottomOf="@id/travelOverseas"
        />
        <View
                android:id="@id/travelOverseasLgl"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:background="@color/pinkish_grey"
                android:alpha="0.5"
                app:layout_constraintStart_toEndOf="@id/travelOverseasIcon"
                app:layout_constraintTop_toTopOf="@id/travelOverseas"
                app:layout_constraintBottom_toBottomOf="@id/travelOverseas"
        />
        <TextView
                android:id="@id/travelOverseasTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해외 여행"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toTopOf="@id/travelOverseasSubTitle"
                app:layout_constraintStart_toEndOf="@id/travelOverseasLgl"
                app:layout_constraintTop_toTopOf="@id/travelOverseas"
                app:layout_constraintVertical_chainStyle="packed"
        />
        <TextView
                android:id="@id/travelOverseasSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증샷 오지게 박자"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/pinkish_grey"
                app:layout_constraintTop_toBottomOf="@id/travelOverseasTitle"
                app:layout_constraintStart_toStartOf="@id/travelOverseasTitle"
                app:layout_constraintBottom_toBottomOf="@id/travelOverseas"
        />
        <ImageView
                android:id="@id/travelOverseasStart"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:layout_constraintTop_toTopOf="@id/travelOverseas"
                app:layout_constraintBottom_toBottomOf="@id/travelOverseas"
                app:layout_constraintEnd_toEndOf="@id/travelOverseas"
        />
        <androidx.constraintlayout.widget.Group
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="5dp"
                app:constraint_referenced_ids="
                    travelOverseasIcon, travelOverseasLgl, travelOverseasTitle, travelOverseasSubTitle, travelOverseasStart"
                tools:ignore="NotSibling"/>


        <androidx.cardview.widget.CardView
                android:id="@id/travelDomestic"
                style="@style/ViewStyle.Viaggio.Kinds"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/travelOverseas"
                android:onClick='@{()->viewHandler.selectedKinds("domestic")}'
        />

        <ImageView
                android:id="@id/travelDomesticIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/icon_menu"
                app:layout_constraintStart_toStartOf="@id/travelDomestic"
                app:layout_constraintTop_toTopOf="@id/travelDomestic"
                app:layout_constraintBottom_toBottomOf="@id/travelDomestic"
        />
        <View
                android:id="@id/travelDomesticLgl"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:background="@color/pinkish_grey"
                android:alpha="0.5"
                app:layout_constraintStart_toEndOf="@id/travelDomesticIcon"
                app:layout_constraintTop_toTopOf="@id/travelDomestic"
                app:layout_constraintBottom_toBottomOf="@id/travelDomestic"
        />
        <TextView
                android:id="@id/travelDomesticTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국내 여행"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toTopOf="@id/travelDomesticSubTitle"
                app:layout_constraintStart_toEndOf="@id/travelDomesticLgl"
                app:layout_constraintTop_toTopOf="@id/travelDomestic"
                app:layout_constraintVertical_chainStyle="packed"
        />
        <TextView
                android:id="@id/travelDomesticSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빠르게 짧게 즐기자"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/pinkish_grey"
                app:layout_constraintTop_toBottomOf="@id/travelDomesticTitle"
                app:layout_constraintStart_toStartOf="@id/travelDomesticTitle"
                app:layout_constraintBottom_toBottomOf="@id/travelDomestic"
        />
        <ImageView
                android:id="@id/travelDomesticStart"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:layout_constraintTop_toTopOf="@id/travelDomestic"
                app:layout_constraintBottom_toBottomOf="@id/travelDomestic"
                app:layout_constraintEnd_toEndOf="@id/travelDomestic"
        />
        <androidx.constraintlayout.widget.Group
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="5dp"
                app:constraint_referenced_ids="
                    travelDomesticIcon, travelDomesticLgl, travelDomesticTitle, travelDomesticSubTitle, travelDomesticStart"
                tools:ignore="NotSibling"/>

        <androidx.cardview.widget.CardView
                android:id="@id/travelBeforeOverseas"
                style="@style/ViewStyle.Viaggio.Kinds"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/travelDomestic"
                android:onClick='@{()->viewHandler.selectBeforeKinds("overseas")}'
        />
        <ImageView
                android:id="@id/travelBeforeOverseasIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/icon_menu"
                app:layout_constraintStart_toStartOf="@id/travelBeforeOverseas"
                app:layout_constraintTop_toTopOf="@id/travelBeforeOverseas"
                app:layout_constraintBottom_toBottomOf="@id/travelBeforeOverseas"
        />
        <View
                android:id="@id/travelBeforeOverseasLgl"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:background="@color/pinkish_grey"
                android:alpha="0.5"
                app:layout_constraintStart_toEndOf="@id/travelBeforeOverseasIcon"
                app:layout_constraintTop_toTopOf="@id/travelBeforeOverseas"
                app:layout_constraintBottom_toBottomOf="@id/travelBeforeOverseas"
        />
        <TextView
                android:id="@id/travelBeforeOverseasTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다녀온 해외 여행"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toTopOf="@id/travelBeforeOverseasSubTitle"
                app:layout_constraintStart_toEndOf="@id/travelBeforeOverseasLgl"
                app:layout_constraintTop_toTopOf="@id/travelBeforeOverseas"
                app:layout_constraintVertical_chainStyle="packed"
        />
        <TextView
                android:id="@id/travelBeforeOverseasSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해외 기억을 더듬으면서 남기자"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/pinkish_grey"
                app:layout_constraintTop_toBottomOf="@id/travelBeforeOverseasTitle"
                app:layout_constraintStart_toStartOf="@id/travelBeforeOverseasTitle"
                app:layout_constraintBottom_toBottomOf="@id/travelBeforeOverseas"
        />
        <ImageView
                android:id="@id/travelBeforeOverseasStart"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:layout_constraintTop_toTopOf="@id/travelBeforeOverseas"
                app:layout_constraintBottom_toBottomOf="@id/travelBeforeOverseas"
                app:layout_constraintEnd_toEndOf="@id/travelBeforeOverseas"
        />
        <androidx.constraintlayout.widget.Group
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="5dp"
                app:constraint_referenced_ids="
                    travelBeforeOverseasIcon, travelBeforeOverseasLgl, travelBeforeOverseasTitle,
                    travelBeforeOverseasSubTitle,travelBeforeOverseasStart"
                tools:ignore="NotSibling"/>
        <androidx.cardview.widget.CardView
                android:id="@id/travelBeforeDomestic"
                style="@style/ViewStyle.Viaggio.Kinds"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/travelBeforeOverseas"
                android:onClick='@{()->viewHandler.selectBeforeKinds("domestic")}'
        />
        <ImageView
                android:id="@id/travelBeforeDomesticIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/icon_menu"
                app:layout_constraintStart_toStartOf="@id/travelBeforeDomestic"
                app:layout_constraintTop_toTopOf="@id/travelBeforeDomestic"
                app:layout_constraintBottom_toBottomOf="@id/travelBeforeDomestic"
        />
        <View
                android:id="@id/travelBeforeDomesticLgl"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:background="@color/pinkish_grey"
                android:alpha="0.5"
                app:layout_constraintStart_toEndOf="@id/travelBeforeDomesticIcon"
                app:layout_constraintTop_toTopOf="@id/travelBeforeDomestic"
                app:layout_constraintBottom_toBottomOf="@id/travelBeforeDomestic"
        />
        <TextView
                android:id="@id/travelBeforeDomesticTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다녀온 국내 여행"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toTopOf="@id/travelBeforeDomesticSubTitle"
                app:layout_constraintStart_toEndOf="@id/travelBeforeDomesticLgl"
                app:layout_constraintTop_toTopOf="@id/travelBeforeDomestic"
                app:layout_constraintVertical_chainStyle="packed"
        />
        <TextView
                android:id="@id/travelBeforeDomesticSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국내 기억을 더듬으면서 남기자"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/pinkish_grey"
                app:layout_constraintTop_toBottomOf="@id/travelBeforeDomesticTitle"
                app:layout_constraintStart_toStartOf="@id/travelBeforeDomesticTitle"
                app:layout_constraintBottom_toBottomOf="@id/travelBeforeDomestic"
        />
        <ImageView
                android:id="@id/travelBeforeDomesticStart"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:layout_constraintTop_toTopOf="@id/travelBeforeDomestic"
                app:layout_constraintBottom_toBottomOf="@id/travelBeforeDomestic"
                app:layout_constraintEnd_toEndOf="@id/travelBeforeDomestic"
        />
        <androidx.constraintlayout.widget.Group
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="5dp"
                app:constraint_referenced_ids="
                    travelBeforeDomesticIcon, travelBeforeDomesticLgl, travelBeforeDomesticTitle,
                    travelBeforeDomesticSubTitle, travelBeforeDomesticStart"
                tools:ignore="NotSibling"/>
        <View
                android:id="@+id/bgl"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/travelBeforeDomestic"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>