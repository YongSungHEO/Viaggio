<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.kotlin.viaggio.view.setting.SettingFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.setting.SettingFragmentViewModel"/>

        <variable name="viewModel" type="SettingFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>

    <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
        <androidx.core.widget.NestedScrollView
                android:id="@+id/setting_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:background="@color/white_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <View
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="48.5dp"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->viewHandler.cancel()}"
                        app:rippleColor="@color/rippleColor"
                        app:iconGravity="textEnd"
                        app:icon="@drawable/ic_clear_black_24dp"
                        app:iconTint="@color/almost_black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="PrivateResource" />
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/tool_bar_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/toolbar"
                        app:layout_constraintBottom_toBottomOf="@id/toolbar"
                />
                <com.google.android.material.button.MaterialButton
                        android:id="@id/settingSign"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:strokeWidth="0.8dp"
                        app:strokeColor="@color/brown_grey"
                        app:cornerRadius="0dp"
                        app:backgroundTint="@android:color/white"
                        android:text="@string/setting_sign"
                        android:layout_width="0dp"
                        android:layout_height="67dp"
                        android:layout_marginTop="@dimen/common_top"
                        android:layout_marginStart="@dimen/common_margin"
                        android:layout_marginEnd="@dimen/common_margin"
                        android:paddingStart="@dimen/common_margin"
                        android:paddingEnd="0dp"
                        app:layout_constraintTop_toBottomOf="@id/toolbar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:visibility="gone"
                        android:onClick="@{()->viewHandler.sign()}"
                />
                <View
                        android:id="@id/settingSignIn"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:background="@drawable/setting_bg"
                        android:layout_marginTop="@dimen/common_top"
                        android:layout_marginStart="@dimen/common_margin"
                        android:layout_marginEnd="@dimen/common_margin"
                        app:layout_constraintTop_toBottomOf="@id/settingSign"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                />
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@id/settingProfileImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/icon_profile"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="@dimen/common_top"
                        app:layout_constraintStart_toStartOf="@id/settingSignIn"
                        app:layout_constraintTop_toTopOf="@id/settingSignIn"
                        app:layout_constraintBottom_toBottomOf="@id/settingSignIn"
                />
                <TextView
                        android:id="@id/settingName"
                        android:text="@{viewModel.name}"
                        style="@style/ViewStyle.Viaggio.Setting"
                        android:textColor="@color/almost_black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="@dimen/common_top"
                        app:layout_constraintStart_toEndOf="@id/settingProfileImg"
                        app:layout_constraintTop_toTopOf="@id/settingSignIn"
                        tools:text="Minkyu"
                />
                <TextView
                        android:id="@id/settingEmail"
                        android:text="@{viewModel.email}"
                        style="@style/ViewStyle.Viaggio.Setting"
                        android:layout_marginStart="@dimen/common_top"
                        android:layout_marginBottom="6.5dp"
                        app:layout_constraintStart_toEndOf="@id/settingProfileImg"
                        app:layout_constraintBottom_toBottomOf="@id/settingSignIn"
                        tools:text="minkyu9403@gmail.com"
                        android:fontFamily="@font/comfortaa_light"/>
                <View
                        android:id="@id/settingEtc"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/setting_bg"
                        android:layout_marginTop="@dimen/common_top"
                        android:layout_marginStart="@dimen/common_margin"
                        android:layout_marginEnd="@dimen/common_margin"
                        app:layout_constraintTop_toBottomOf="@id/settingSignIn"
                        app:layout_constraintBottom_toBottomOf="@id/settingLogout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.button.MaterialButton
                        android:id="@id/settingMyProfile"
                        android:text="@string/setting_my_profile"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:icon="@drawable/icon_my_profile"
                        app:iconTintMode="multiply"
                        app:iconTint="@android:color/white"
                        app:iconPadding="15dp"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintTop_toTopOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        android:onClick="@{()->viewHandler.myProfile()}"
                        tools:ignore="PrivateResource"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@id/settingPassword"
                        android:text="@string/setting_password"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:icon="@drawable/ic_vpn_key"
                        app:iconTintMode="src_in"
                        app:iconTint="@color/brown_grey_two"
                        app:iconPadding="15dp"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        app:layout_constraintTop_toBottomOf="@id/settingMyProfile"
                        android:onClick="@{()->viewHandler.password()}"
                />

                <com.google.android.material.button.MaterialButton
                        android:id="@id/settingSync"
                        android:text="@string/setting_sync"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:icon="@drawable/ic_cloud_download"
                        app:iconTintMode="src_in"
                        app:iconTint="@color/brown_grey_two"
                        app:iconPadding="15dp"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        app:layout_constraintTop_toBottomOf="@id/settingPassword"
                        android:onClick="@{()->viewHandler.uploadCheck()}"
                />
                <com.google.android.material.button.MaterialButton
                        android:id="@id/settingLogout"
                        android:text="@string/setting_logout"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:icon="@drawable/ic_logout"
                        app:iconTintMode="src_in"
                        app:iconTint="@color/brown_grey_two"
                        app:iconPadding="15dp"
                        app:layout_constraintStart_toStartOf="@id/settingEtc"
                        app:layout_constraintEnd_toEndOf="@id/settingEtc"
                        app:layout_constraintTop_toBottomOf="@id/settingSync"
                        android:onClick="@{()->viewHandler.logout()}"
                />
                <androidx.constraintlayout.widget.Group
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="@{viewModel.isLogin ? View.VISIBLE:View.GONE}"
                        app:constraint_referenced_ids="settingMyProfile,settingEtc,settingAutoUploadCheck,settingSync,settingLogout,settingSignIn,settingProfileImg,settingName,settingEmail,settingPassword"
                        tools:ignore="UnknownId"/>
                <View
                        android:id="@id/settingEntire"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/setting_bg"
                        android:layout_marginTop="@dimen/common_top"
                        android:layout_marginStart="@dimen/common_margin"
                        android:layout_marginEnd="@dimen/common_margin"
                        app:layout_constraintTop_toBottomOf="@id/settingEtc"
                        app:layout_constraintBottom_toBottomOf="@id/settingAppVersion"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.button.MaterialButton
                        android:id="@id/settingImage"
                        android:text="@string/setting_image"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:icon="@drawable/ic_photo"
                        app:iconTintMode="src_in"
                        app:iconTint="@color/brown_grey_two"
                        app:iconPadding="15dp"
                        android:onClick="@{()->viewHandler.imageSetting()}"
                        app:layout_constraintStart_toStartOf="@id/settingEntire"
                        app:layout_constraintEnd_toEndOf="@id/settingEntire"
                        app:layout_constraintTop_toTopOf="@id/settingEntire"
                />
                <com.google.android.material.button.MaterialButton
                        android:id="@id/settingLock"
                        android:text="@string/setting_lock"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:icon="@drawable/ic_lock"
                        app:iconTintMode="src_in"
                        app:iconTint="@color/brown_grey_two"
                        app:iconPadding="15dp"
                        android:onClick="@{()->viewHandler.lockSetting()}"
                        app:layout_constraintStart_toStartOf="@id/settingEntire"
                        app:layout_constraintEnd_toEndOf="@id/settingEntire"
                        app:layout_constraintTop_toBottomOf="@id/settingAutoUpload"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@id/settingLockNotice"
                        android:text="@{viewModel.lockNotice ? @string/lock_on:@string/lock_off}"
                        android:textColor="@{viewModel.lockNotice ? @color/almost_black:@color/brown_grey_two}"
                        android:textAppearance="@style/TextAppearance.Viaggio.Setting"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="@id/settingEntire"
                        app:layout_constraintTop_toTopOf="@id/settingLock"
                        app:layout_constraintBottom_toBottomOf="@id/settingLock"
                        tools:text="@string/lock_off"
                        tools:ignore="PrivateResource,SpUsage"/>
                <com.google.android.material.button.MaterialButton
                        android:id="@id/settingAutoUpload"
                        android:text="@string/setting_upload"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:icon="@drawable/ic_cloud_upload"
                        app:iconTintMode="src_in"
                        app:iconTint="@color/brown_grey_two"
                        app:iconPadding="15dp"
                        android:onClick="@{()->viewHandler.autoUpload()}"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@id/settingEntire"
                        app:layout_constraintEnd_toEndOf="@id/settingEntire"
                        app:layout_constraintTop_toBottomOf="@id/settingImage"
                />
                <TextView
                        android:id="@id/settingAppVersion"
                        android:text="@string/setting_app_version"
                        android:layout_marginBottom="5dp"
                        style="@style/ViewStyle.Viaggio.Setting"
                        app:layout_constraintStart_toStartOf="@id/settingEntire"
                        app:layout_constraintTop_toBottomOf="@id/settingLock"
                />
                <TextView
                        style="@style/ViewStyle.Viaggio.Setting"
                        android:gravity="end|center_vertical"
                        android:text="@{viewModel.appVersion}"
                        android:layout_marginEnd="0dp"
                        app:layout_constraintTop_toTopOf="@id/settingAppVersion"
                        app:layout_constraintBottom_toBottomOf="@id/settingAppVersion"
                        app:layout_constraintEnd_toEndOf="@id/settingEntire"
                        tools:text="10.22.11614"
                        android:fontFamily="@font/rajdhani_medium"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@id/settingEntire"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>