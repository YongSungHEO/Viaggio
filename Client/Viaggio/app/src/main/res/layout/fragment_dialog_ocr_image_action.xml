<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.kotlin.viaggio.view.camera.OcrImageActionDialogFragment.ViewHandler"/>
        <import type="com.kotlin.viaggio.view.camera.OcrImageActionDialogFragmentViewModel"/>
        <import type="android.view.View"/>

        <variable name="viewModel" type="OcrImageActionDialogFragmentViewModel"/>
        <variable name="viewHandler" type="ViewHandler"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@id/ocrImageActionContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dialogBg">
        <View
                android:id="@id/ocrImageActionPop"
                android:layout_width="272dp"
                android:layout_height="146.5dp"
                android:background="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.chooseCountry}"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="@id/ocrImageActionPop"
                app:layout_constraintBottom_toBottomOf="@id/ocrImageActionPop"
                app:layout_constraintStart_toStartOf="@id/ocrImageActionPop"
                app:layout_constraintEnd_toEndOf="@id/ocrImageActionPop"
        />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewHandler.startTravel()}"
                app:layout_constraintBottom_toBottomOf="@id/ocrImageActionPop"
                app:layout_constraintStart_toStartOf="@id/ocrImageActionPop"
                app:layout_constraintEnd_toEndOf="@id/ocrImageActionPop"
                android:text="Start"
                tools:ignore="HardcodedText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>