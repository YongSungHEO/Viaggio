<?xml version="1.0" encoding="utf-8"?>

<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto"
             android:id="@+id/motionLayout">

    <Transition
            motion:constraintSetEnd="@+id/end"
            motion:constraintSetStart="@+id/start"
            motion:duration="1000"
            motion:interpolator="linear">

        <OnSwipe
                motion:touchAnchorId="@id/travelingList"
                motion:touchAnchorSide="top"
                motion:dragDirection="dragUp"/>
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
                android:id="@id/travelingList"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintBottom_toTopOf="@id/homeController">
        </Constraint>
        <Constraint
                android:id="@id/test"
                android:layout_width="0dp"
                android:layout_height="0dp"
                motion:layout_constraintStart_toStartOf="@id/travelingList"
                motion:layout_constraintEnd_toEndOf="@id/travelingList"
                motion:layout_constraintTop_toTopOf="@id/travelingList"
                motion:layout_constraintBottom_toBottomOf="@id/travelingList">
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
                android:id="@id/travelingList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="-40dp"
                android:layout_marginEnd="-40dp"
                motion:layout_constraintBottom_toTopOf="@id/homeController"
                motion:layout_constraintTop_toBottomOf="@id/tgl"
        >
        </Constraint>

        <Constraint
                android:id="@id/test"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="5dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent">
        </Constraint>
    </ConstraintSet>
</MotionScene>